@{
}

@model IEnumerable<jobzila_mvc2.Models.Post> ;

<h1>Welcome to My Blog Page</h1>
<p>Here we have all the latest post</p>
<div>

    @* @Html.ActionLink("Create New Post", "Create", "Blog") *@
    <a asp-action="Create" asp-controller="Blog" class="button-link">Create New Post</a>
</div>



<div>
    @foreach (var post in Model)
    {


        <article>

            <h1>@Html.ActionLink(post.Title, "Post", "Blog", new {year=post.Posted.Year ,month=post.Posted.Month , key=post.key}) </h1>
            <div class="details">
                Posted <span>@post.Posted</span> by <span>@post.Author</span>
            </div>
            <div class="content">
                @post.Body
            </div>


        </article>
      

    }

</div>


